#!/bin/ksh
# $Header: /oracle/app/oracle/.profile_custom,v 1.1 2018/08/29 13:22:42 oracle Exp $
# $DateTime: 2006/05/19 08:54:35 $
# $Change: 1073 $
# $Author: oracle $
#
# Revision History:
# V2.2.0	J. Gaydos	updated version # to 2.2.0 
# V2.1.9	J. Gaydos	Added lines code for Linux systems.
#
# NOTE: PLEASE DO NOT CHANGE OR REMOVE THE version= STATEMENT
#       NEEDED BY DBID FOR VERSION CONTROL
#	BUT YOU CAN ADD OTHER CUSTOMIZATIONs
#	INCLUDING CUSTOMIZATION OF THE ULIMIT CODE IF NECESSARY	

if [ `uname -s` = "Linux" ]; then
  stty columns 132
  COLUMNS=132 ; export COLUMNS
  HISTSIZE=1000
fi

if [ `uname -s` = "AIX" ]; then
  export AIXTHREAD_SCOPE=S 
  export LDR_CNTRL=DATAPSIZE=64K@TEXTPSIZE=64K@STACKPSIZE=64K@SHMPSIZE=64K 
fi

version=V2.2.0

ulimit_s=`ulimit -s`
case $ulimit_s in
  "unlimited" ) 
  ;;
  "32768") 
  ;;
  *) ulimit -s 32768
  ;;
esac

if [ `uname -s` = "HP-UX" ]
then
  results=`ulimit -a | grep file | awk '{print $2}'`
else
  results=`ulimit -n`
fi

case $results in
  "unlimited" ) 
  ;;
  "4096") 
  ;;
  *) ulimit -n 4096  
  ;;
esac
echo ""
echo "SECURITY REMINDER:  Do NOT place an Oracle account password on Unix command "
echo "line when using Oracle tools such as SQLPLUS, EXP, IMP, etc. as it poses security risks."
alias disk='cd /oracle/nfs/share/Oracle_software/portal/bin/zt_task/disk*'
alias emcdd='cd /oracle/nfs/share/Oracle_software/portal/bin/zt_task/emcdd'
alias tech='cd /oracle/nfs/share/Oracle_software/portal/bin/zt_task/techcenter'
alias dbcopy='cd /oracle/nfs/share/Oracle_software/portal/bin/zt_task/dbcopy'
alias pay='cd /oracle/nfs/share/Oracle_software/rel_mgmt/payload'
alias rmsql='cd /oracle/nfs/share/Oracle_software/rel_mgmt/sql/rm_client'
alias ztbin='cd /oracle/nfs/share/Oracle_software/portal/bin'
alias ldap='cd /oracle/nfs/share/Oracle_software/ldap_oid'
alias dbtools='cd /oracle/nfs/share/Oracle_software/db_tools'
alias tde='cd /oracle/nfs/share/Oracle_software/tde'
export check_tde='/oracle/nfs/share/Oracle_software/tde/check_tde.sql'
alias pgdir='cd /oracle/nfs/share/Postgres_software/postgres_scripts'
alias cred='cd /oracle/nfs/share/Oracle_software/portal/cred_mgr'
alias gitproj='cd /oracle/nfs/share/Oracle_software/rel_mgmt/payload/working/projects/dbs-rel_mgmt'
export PATH=$PATH:/oracle/nfs/share/Oracle_software/portal/bin
set -o vi
export TERM=xterm;tset
export ORACLE_BASE=/oracle/app/oracle/product
